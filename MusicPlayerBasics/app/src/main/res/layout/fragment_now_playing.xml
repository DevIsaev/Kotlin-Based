<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/headerColorPrimary"
    tools:context=".NowPlaying">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/album_NP"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        app:shapeAppearanceOverlay="@style/curved"
        android:src="@drawable/icon"/>

    <ImageView
        android:id="@+id/nextBTN_NP"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/backgroundColor"
       android:background="@drawable/baseline_skip_next_24"
        app:iconSize="30dp"
        app:iconTint="@color/white"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/playPauseBTN_NP"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="5dp"
        android:layout_toStartOf="@id/nextBTN_NP"
        android:backgroundTint="@color/backgroundColor"
        android:background="@drawable/baseline_play_arrow_24"
        app:iconSize="30dp"
        app:iconTint="@color/white"
        tools:ignore="SpeakableTextPresentCheck" />
    <ImageView
        android:id="@+id/prevBTN"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="5dp"
        android:layout_toStartOf="@id/playPauseBTN_NP"
        android:backgroundTint="@color/backgroundColor"
        android:background="@drawable/baseline_skip_previous_24"
        app:iconTint="@color/white"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/songNP"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_toStartOf="@id/prevBTN"
        android:layout_toEndOf="@+id/album_NP"
        android:gravity="center_vertical"
        android:text="@string/Song"
        android:textSize="12sp"
        android:ellipsize="marquee"

        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/artistNP"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:layout_toStartOf="@id/prevBTN"
        android:layout_toEndOf="@+id/album_NP"
        android:gravity="center_vertical"
        android:text="@string/Song"
        android:textSize="11sp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"/>
</RelativeLayout>