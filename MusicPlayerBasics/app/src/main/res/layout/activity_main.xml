<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    tools:openDrawer="end"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Drawer"
    app:menu="@menu/nav_menu"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar"
        android:elevation="4dp"
        android:background="?attr/themeColors"
        android:tooltipText="MainActivity"
        app:popupTheme="@style/Theme.AppCompat.Light"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="5dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="622dp" />
        </LinearLayout>

        <com.qamar.curvedbottomnaviagtion.CurvedBottomNavigation
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cbn_background="?attr/themeColors"
            app:cbn_curve_radius="26dp"
            app:cbn_fabColor="#4778ff"
            app:cbn_height="76dp"
            app:cbn_iconColor="@color/white"
            app:cbn_icon_size="24dp"
            app:cbn_selectedIconColor="@color/white"
            app:cbn_selected_icon_size="48dp"
            app:cbn_titleColor="@color/white"

            app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout5"
            tools:ignore="MissingConstraints">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/themeColors">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/album_NP"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    app:shapeAppearanceOverlay="@style/curved"
                    android:src="@drawable/icon"/>

                <ImageView
                    android:id="@+id/nextBTN_NP"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/backgroundColor"
                    android:background="@drawable/baseline_skip_next_24"
                    app:iconSize="30dp"
                    app:iconTint="@color/white"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/playPauseBTN_NP"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="5dp"
                    android:layout_toStartOf="@id/nextBTN_NP"
                    android:backgroundTint="@color/backgroundColor"
                    android:background="@drawable/baseline_play_arrow_24"
                    app:iconTint="@color/white"
                    tools:ignore="SpeakableTextPresentCheck" />
                <ImageView
                    android:id="@+id/prevBTN"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="5dp"
                    android:layout_toStartOf="@id/playPauseBTN_NP"
                    android:backgroundTint="@color/backgroundColor"
                    android:background="@drawable/baseline_skip_previous_24"
                    app:iconTint="@color/white"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/songNP"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_toStartOf="@id/prevBTN"
                    android:layout_toEndOf="@+id/album_NP"
                    android:gravity="center_vertical"
                    android:text="@string/Song"
                    android:textSize="12sp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/artistNP"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="30dp"
                    android:layout_toStartOf="@id/prevBTN"
                    android:layout_toEndOf="@+id/album_NP"
                    android:gravity="center_vertical"
                    android:text="@string/Song"
                    android:textSize="11sp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"/>

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/nowPlaying"
                    android:name="com.example.musicplayerbasics.NowPlaying"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="parent"
                    tools:layout="@layout/fragment_now_playing" />
            </RelativeLayout>


        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/NavView"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        app:headerLayout="@layout/nav_head"/>
</androidx.drawerlayout.widget.DrawerLayout>