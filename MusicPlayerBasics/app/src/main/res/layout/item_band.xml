<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/spacing_xmedium">



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_band_tv_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            tools:text="5db"/>

        <com.lukelorusso.verticalseekbar.VerticalSeekBar
            android:id="@+id/item_band_sb_progress"
            android:layout_width="25dp"
            android:layout_height="145dp"
            app:vsb_bar_corner_radius="10dp"
            android:layout_margin="16dp"
            app:vsb_progress="0"
            app:vsb_max_value="20"
            app:vsb_thumb_placeholder_src="@drawable/baseline_surround_sound_24"
            app:vsb_use_thumb_to_set_progress="true"
            app:vsb_thumb_container_tint="@android:color/transparent"
            tools:ignore="MissingClass" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_band_tv_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            tools:text="5db"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_band_tv_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        tools:text="Frequency"/>
</androidx.appcompat.widget.LinearLayoutCompat>