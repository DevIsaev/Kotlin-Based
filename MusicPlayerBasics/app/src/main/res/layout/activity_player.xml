<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:layout_gravity="center">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/playersheetbg"
    >


    <ImageButton
        android:id="@+id/closeB"
        android:layout_width="150dp"
        android:layout_height="5dp"
        android:layout_gravity="center|top"
        android:background="@color/black"
        android:contentDescription="Close"
        android:scaleType="centerCrop"
        tools:ignore="TouchTargetSizeCheck" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:layout_marginTop="15dp"
    android:layout_weight="1">
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_weight="1"
        tools:ignore="NestedWeights"
        />

    <ImageButton
        android:id="@+id/favouriteBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="15dp"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_favorite_border_24"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
</LinearLayout>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/albumFont"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/curved"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/albumIMGFont"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/icon"
            android:layout_gravity="center"
            app:shapeAppearanceOverlay="@style/curved"
            app:strokeColor="@color/black"/>

</FrameLayout>

    <FrameLayout
        android:id="@+id/albumBack"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/curved"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/albumIMGBack"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@color/black"
            app:shapeAppearanceOverlay="@style/curved"
            app:strokeColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Total"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:gravity="center" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/songTITLE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="@string/Song"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
<TextView
    android:id="@+id/durationCURRENT"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:textColor="@color/black"
    android:textSize="15sp"
    android:text="@string/Start"
    android:gravity="center"/>
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/SeekBarDuration"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights"
            />
        <TextView
            android:id="@+id/durationEND"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:text="@string/End"
            android:gravity="center"/>

    </LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:gravity="center"
    android:layout_weight="1">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton

        android:id="@+id/btnPREVIOUS"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:icon="@drawable/baseline_skip_previous_24"
        app:iconSize="40dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnPAUSE_PLAY"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="25dp"
        android:backgroundTint="@color/pink"
        app:icon="@drawable/baseline_pause_24"
        app:iconSize="40dp"
        app:iconTint="@color/white"
        app:shapeAppearanceOverlay="@style/curved"
        tools:ignore="SpeakableTextPresentCheck" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnNEXT"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:icon="@drawable/baseline_skip_next_24"
        app:iconSize="40dp"
        tools:ignore="SpeakableTextPresentCheck" />
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/repeatBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/RepeatBTN"
            android:src="@drawable/baseline_repeat_24"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/equalizerBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/EqualizerBTN"
            android:src="@drawable/baseline_graphic_eq_24"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/timerBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/TimerBTN"
            android:src="@drawable/outline_timer_24"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/shareBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/ShareBTN"
            android:src="@drawable/baseline_share_24"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>