<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/Layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e2a600"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cakranormal"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="170dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="Авторизация" />

    <EditText
        android:id="@+id/loginTextAuth"
        android:layout_width="220sp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/LogHitch"
        android:textColorHint="@color/white"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>


    <EditText
        android:id="@+id/PassTextAuth"
        android:layout_width="220sp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="@string/PassHitch"
        android:textColorHint="@color/white"
        android:layout_marginTop="20dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/buttonAuth"
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:backgroundTint="#201E20"
        android:gravity="center"
        android:textSize="16sp"
        android:fontFamily="@font/cakranormal"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Войти" />

    <TextView
        android:id="@+id/bReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/cakranormal"
        android:gravity="center"
        android:text="Не зарегистрированы?"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>