<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/Layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-black"
        android:gravity="left"
        android:text="С ВОЗВРАЩЕНИЕМ!"
        android:textColor="@color/white"
        android:textSize="25sp"

        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-black"
        android:gravity="left"
        android:text="Войдите для продолжения"
        android:textColor="@color/white"
        android:textSize="18sp"

        android:textStyle="bold" />


    <EditText
        android:id="@+id/EmailAuth"
        android:layout_width="220sp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="email"
        android:inputType="text"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/PassAuth"
        android:layout_width="220sp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="password"
        android:textColorHint="@color/white"
        android:layout_marginTop="20dp"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/bRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:gravity="center"
        android:text="Не помните пароль?"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/PBAuth"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="14dp"
        android:layout_gravity="center"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/buttonAuth"
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#201E20"
        android:gravity="center"

        android:text="Войти"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/buttonGoogle"
        android:layout_width="220sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:drawableLeft="@drawable/googleg_standard_color_18"
        android:text="Войти через Google"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"

        android:gravity="center"
        android:text="Не зарегистрированы?"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/bGo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:gravity="center"
        android:text="Войти без авторизации"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>